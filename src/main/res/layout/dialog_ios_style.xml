<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="250dp"
    android:elevation="3dp"
    android:outlineAmbientShadowColor="@color/black"
    android:outlineSpotShadowColor="@color/black"
    android:orientation="vertical"
    android:paddingTop="5sp"
    android:paddingLeft="5sp"
    android:paddingRight="5sp"
    android:gravity="center_horizontal"
    android:background="@drawable/ios_dialog_background">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/iosDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Dialog Message -->
    <TextView
        android:id="@+id/iosDialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is an iOS-style dialog."
        android:textSize="16sp"
        android:maxLines="4"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:fontFamily="@font/sf_pro_regular"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/iosDialogCancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/ios_blue"
            android:fontFamily="@font/sf_pro_regular"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp" />

        <View
            android:layout_width="1dp"
            android:id="@+id/iosDevider"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/iosDialogConfirmButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"
            android:textColor="@color/ios_blue"
            android:fontFamily="@font/sf_pro_regular"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp" />
    </LinearLayout>

</LinearLayout>
