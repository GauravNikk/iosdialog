<resources>
    <!-- iOS Style Dialog Theme -->
    <style name="iOSDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/iOSDialogAnimation</item>
    </style>

    <!-- iOS-style Dialog Animations -->
    <style name="iOSDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/ios_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/ios_dialog_exit</item>
    </style>
</resources>
